{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": false,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules"]
}